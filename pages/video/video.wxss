page {
  height: 100%;
}

.main-container {
  display: flex;
  height: 100%;
  flex-direction: column;
}

.video-player-container {
  display: flex;
  flex-direction: column;
  height: 500rpx;
}

.video-player {
  /*width: 750rpx;*/
  width: 100%;
}

.sub-scroll {
  flex: 1;
  padding: 7rpx 7rpx 0 7rpx;
  background: white;
}

.video-sub {
  font-size: 14px;
  margin: 10rpx;
  border-bottom: 1px solid #dedede;
}

.zh-sub {
  margin-top: 10rpx;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.td {
  padding: 10px;
  text-align: left;
  width: 100%
}


.flex-item {
  flex-grow: 1;
  text-align: center;
}

.play-btn.active {
  width: 30rpx;
  background-image: url(data:image/svg+xml;base64,);
}

.play-btn {
  margin: 12px 5px;
  width: 18px;
  height: 16px;
  display: inline-block;
  vertical-align: middle;
  background-image: url(data:image/svg+xml;base64,);
}

.audio-btn {
  width: 13px;
  height: 18px;
  background-image: url(data:image/svg+xml;base64,);
}

.close-btn {
}

.dict {
  padding: 12px;
}

.dict-header {
  font-size: 14px;
}

.dict-body {
  font-size: 14px;
  height: 200rpx;
}

.description {
  font-size: 14px;
}

